<ul id="product-tab" class="nav nav-tabs" role="tablist">
  <li class="active first">
    <a href="#product_tabs_description" role="tab" data-toggle="tab" {% if settings.language_enable %}data-translate="products.product.tab_title_description"{% endif %}>{{ 'products.product.tab_title_description' | t }}</a>
  </li>
  <li class="">
    <a href="#product_tabs_tabreviews" role="tab" data-toggle="tab" {% if settings.language_enable %}data-translate="products.product.tab_title_review"{% endif %}>{{ 'products.product.tab_title_review' | t }}</a>
  </li> 
  {% if settings.tab_size_chart_enable != blank %}
  <li class="">
    <a href="#product_tabs_size_chart" role="tab" data-toggle="tab"> 
      {% if settings.language_enable %}
      <span class="lang1">{{ settings.tab_size_chart_title | split: '|' | first }}</span>
      <span class="lang2">{{ settings.tab_size_chart_title | split: '|' | last }}</span>
      {% else %}
      {{ settings.tab_size_chart_title | split: '|' | first }}
      {% endif %}
    </a>
  </li> 
  {% endif %}
  {% if settings.tab_custom_title != blank %}
  <li class="">
    <a href="#product_tabs_custom" role="tab" data-toggle="tab"> 
      {% if settings.language_enable %}
      <span class="lang1">{{ settings.tab_custom_title | split: '|' | first }}</span>
      <span class="lang2">{{ settings.tab_custom_title | split: '|' | last }}</span>
      {% else %}
      {{ settings.tab_custom_title | split: '|' | first }}
      {% endif %}
    </a>
  </li> 
  {% endif %}
</ul>
<div class="tab-content">
  <div class="tab-pane in active first" id="product_tabs_description">
    <div class="product-tabs-content-inner clearfix"> 
      {% if settings.language_enable %}
      <div class="lang1">{{ product.description | split: '[lang2]' | first }}</div>
      <div class="lang2">{{ product.description | split: '[lang2]' | last }}</div>
      {% else %}
      {{ product.description | split: '[lang2]' | first }}
      {% endif %}
    </div>
  </div>
  <div class="tab-pane" id="product_tabs_tabreviews">
    <div class="product-tabs-content-inner clearfix">
      <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
    </div>
  </div>
  {% if settings.tab_size_chart_enable != blank %}
  <div class="tab-pane" id="product_tabs_size_chart">
    <div class="product-tabs-content-inner clearfix">
      <img src="{{ 'tab_size_chart.png' | asset_url }}" class="img-responsive" />
    </div>
  </div> 
  {% endif %}
  {% if settings.tab_custom_title != blank %}
  <div class="tab-pane" id="product_tabs_custom">
    <div class="product-tabs-content-inner clearfix"> 
      {% if settings.language_enable %}
      <span class="lang1">{{ settings.tab_custom_content | split: '|' | first }}</span>
      <span class="lang2">{{ settings.tab_custom_content | split: '|' | last }}</span>
      {% else %}
      {{ settings.tab_custom_content | split: '|' | first }}
      {% endif %}
    </div>
  </div> 
  {% endif %}
</div>