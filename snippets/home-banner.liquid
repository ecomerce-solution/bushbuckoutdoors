    <div class="home-banner">
      <div class="col-sm-4 col-xs-12 no-padd">
        {% if settings.home_banner_1_enable %}
        <div class="banner-wrapper">
          <div class="inner-banner">
            <div class="overlay">
              <span class="widget widget-category-link">
                <a href="{{ settings.home_banner_link_1}}"><i class="fs1" aria-hidden="true" data-icon="$"></i></a>
              </span>
            </div>
            <div class="banner-img"> 
              <img src="{{ 'home_banner_1.jpg' | asset_url }}" alt="{{ settings.home_banner_title_1}}" />
            </div>
          </div>
          <div class="banner-content">
            <span class="content-inner">
              <span class="text"> 
                {% if settings.language_enable %}
                <span class="lang1">{{ settings.home_banner_title_1 | split: '|' | first }}</span>
