<!-- Policy Block -->
<div class="block-under-menu">
	<div class="container">
      <div class="policy-wrapper">
		<div class="row">
          <div class="col-sm-4 col-xs-12 no-padd">
            <div class="policy">
              <a class="policy-link1" href="http://www.bushbuck.io/pages/returns-policy">
              <div class="policy-icon">
                  <img class="slide-icon slide-icon-1" src="{{ 'Header_icon1.svg' | asset_url }}"></img>
              </div>
              <div class="policy-text">
              	<span>{{ 'homepage.block_under_menu.block_title_1' | t }}</span>
              	<p>{{ 'homepage.block_under_menu.block_desc_1' | t }}</p>
              </div>
              </a>
          	</div>
          </div>
          <div class="col-sm-4 col-xs-12 no-padd">
            <div class="policy">
              <a class="policy-link2" href="http://bushbuck.helpscoutdocs.com/article/92-how-do-i-get-free-shipping">
              <div class="policy-icon">
                  <img class="slide-icon slide-icon-1" src="{{ 'Header_icon2.svg' | asset_url }}"></img>
              </div>
              <div class="policy-text">
              	<span>{{ 'homepage.block_under_menu.block_title_2' | t }}</span>
              	<p>{{ 'homepage.block_under_menu.block_desc_2' | t }}</p>
              </div>
              </a>
          	</div>
          </div>
  		  <div class="col-sm-4 col-xs-12 no-padd">
            <div class="policy">
              <a class="policy-link3" href=tel:0800-287-4282>
              <div class="policy-icon">
                  <img class="slide-icon slide-icon-1" src="{{ 'Header_icon3.svg' | asset_url }}"></img>
              </div>
              <div class="policy-text">
              	<span>{{ 'homepage.block_under_menu.block_title_3' | t }}</span>
              	<p>{{ 'homepage.block_under_menu.block_desc_3' | t }}</p>
              </div>
              </a>
          	</div>
          </div>
		</div>
	  </div>
	</div>
</div>

<div class="container">
